<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".FestaPessoa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolha uma opção:" />

        <Spinner
            android:id="@+id/festaOuPessoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@array/opçoes_array" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade: "
                android:textSize="24sp" />

            <EditText
                android:id="@+id/quantidadeBrigadeiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="quantidade de ovos" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escolha o sabor:" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio1_opçao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="verificarSabor"
                    android:text="KitKat" />

                <RadioButton
                    android:id="@+id/radio1_opçao2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="verificarSabor"
                    android:text="Oreo" />

                <RadioButton
                    android:id="@+id/radio1_opçao3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="verificarSabor"
                    android:text="Brigadeiro Tradicional" />

                <RadioButton
                    android:id="@+id/radio1_opçao4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="verificarSabor"
                    android:text="Churros" />

                <RadioButton
                    android:id="@+id/radio1_opçao5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="verificarSabor"
                    android:text="Leite Ninho" />/

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escolha a casca:" />

            <CheckBox
                android:id="@+id/check_chocolate_amargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="VerificarCasca"
                android:text="Chocolate meio amargo" />

            <CheckBox
                android:id="@+id/check_chocolate_branco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="VerificarCasca"
                android:text="Chocolate branco" />

            <CheckBox
                android:id="@+id/check_oreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="VerificarCasca"
                android:text="Oreo" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="pedir"
            android:text="pedir" />
    </LinearLayout>
</LinearLayout>



